<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="s_weather" name="Weather Forecast Snippet">
        <section class="pt32 pb32 s_weather">
            <div class="container days_container"/>
        </section>
    </template>
    <template id="oxp_2023.snippets_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="Weather" data-selector=".s_weather">
                <we-input class="o_we_large" data-target=".days_container" string="Address" data-select-address="" data-no-preview="true"/>
            </div>
        </xpath>
    </template>
</odoo>
